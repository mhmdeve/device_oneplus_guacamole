<resources>

    <!-- List of system apps that are allowed to be locked with app lock.
         Use with extreme caution. -->
    <string-array name="config_appLockAllowedSystemApps" translatable="false">
        <!-- Graphene os camera -->
        <item>app.grapheneos.camera</item>
        <!-- Files -->
        <item>com.android.documentsui</item>
        <!-- Play store -->
        <item>com.android.vending</item>
        <!-- Gallery go -->
        <item>com.google.android.apps.photosgo</item>
        <!-- Gmail -->
        <item>com.google.android.gm</item>
        <!-- Youtube -->
        <item>com.google.android.youtube</item>
        <!-- Via browser. -->
        <item>mark.via.gp</item>
    </string-array>

    <!-- Smart charge sysfs node and value for suspend/resume charging -->
    <string name="config_SmartChargingSysfsNode" translatable="false">/sys/class/power_supply/battery/input_suspend</string>
    <string name="config_SmartChargingSuspendValue" translatable="false">1</string>
    <string name="config_SmartChargingResumeValue" translatable="false">0</string>

    <!-- Whether devices suports in-display fingerprint when screen is off -->
    <bool name="config_supportsScreenOffUdfps">true</bool>

    <!-- The list of package IDs that are not allowed to use aux cameras. -->
    <string-array name="config_cameraAuxPackageExcludeList" translatable="false">
        <item>org.telegram.messenger</item>
        <item>org.thunderdog.challegram</item>
        <item>us.zoom.videomeetings</item>
    </string-array>

    <!-- The list of package IDs that are not allowed to use aux cameras. -->
    <string-array name="config_cameraAuxPackageAllowList" translatable="false">
        <item>com.oneplus.factorymode</item>
        <item>com.oneplus.camera</item>
        <item>com.oneplus.healthcheck</item>
        <item>com.oem.autotest</item>
        <item>org.pixelexperience.faceunlock</item>
    </string-array>
</resources>
